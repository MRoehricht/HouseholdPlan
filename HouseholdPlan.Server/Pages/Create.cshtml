@page
@model HouseholdPlan.Server.Pages.CreateModel
@{
}

<h1>Create</h1>
<h4>Householdtask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HouseholdTask.Title" class="control-label"></label>
                <input asp-for="HouseholdTask.Title" class="form-control" />
                <span asp-validation-for="HouseholdTask.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseholdTask.Description" class="control-label"></label>
                <input asp-for="HouseholdTask.Description" class="form-control" />
                <span asp-validation-for="HouseholdTask.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseholdTask.ProcessingTime.InitialDate" class="control-label"></label>
                <input asp-for="HouseholdTask.ProcessingTime.InitialDate" class="form-control" />
                <span asp-validation-for="HouseholdTask.ProcessingTime.InitialDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseholdTask.ProcessingTime.Replay" class="control-label"></label>
                <select asp-for="HouseholdTask.ProcessingTime.Replay" class="form-control-range" asp-items="Html.GetEnumSelectList<HouseholdPlan.Data.Constants.ProcessingDateReplay>()">
                    <option selected="selected" value="@HouseholdPlan.Data.Constants.ProcessingDateReplay.Daily"></option>
                </select>
                <span asp-validation-for="HouseholdTask.ProcessingTime.Replay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseholdTask.ProcessingTime.Every" class="control-label"></label>
                <input asp-for="HouseholdTask.ProcessingTime.Every" class="form-control" />
                <span asp-validation-for="HouseholdTask.ProcessingTime.Every" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
